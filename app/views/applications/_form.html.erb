<%= form_with(model: application) do |form| %>
  <% if application.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
        <% application.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :applicationID, style: "display: block" %>
    <%= form.number_field :applicationID %>
  </div>

  <div>
    <%= form.label :orgID, style: "display: block" %>
    <%= form.number_field :orgID %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :datebuilt, style: "display: block" %>
    <%= form.date_field :datebuilt %>
  </div>

  <div>
    <%= form.label :githublink, style: "display: block" %>
    <%= form.text_field :githublink %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
